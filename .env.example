# ===========================================
# COSMIC ANALYTICS DASHBOARD - ENV CONFIG
# ===========================================

# NASA API Configuration
# Registriere dich auf: https://api.nasa.gov/
# Ein Key für alle NASA Services (APOD, Mars, NEO, etc.)
NASA_API_KEY=DEMO_KEY

# Hamburg Location (für ISS Passes & Stargazing)
HAMBURG_LAT=53.5511
HAMBURG_LON=9.9937
TIMEZONE=Europe/Berlin

# App Configuration
DEBUG=False
AUTO_REFRESH_INTERVAL=30
CACHE_TTL=300

# Optional: Logging
LOG_LEVEL=INFO
LOG_FILE=cosmic_analytics.log

# ===========================================
# PRODUCTION DEPLOYMENT SETTINGS
# ===========================================

# Streamlit Cloud Secrets
# Diese Werte in .streamlit/secrets.toml kopieren:
# [api_keys]
# nasa = "your_nasa_api_key_here"
# 
# [location]
# hamburg_lat = 53.5511
# hamburg_lon = 9.9937

