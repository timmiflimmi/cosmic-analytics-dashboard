# ===========================================
# COSMIC ANALYTICS DASHBOARD - ENV CONFIG
# ===========================================

# NASA API Configuration
# Registriere dich auf: https://api.nasa.gov/
# DEMO_KEY ist limitiert auf 30 Requests/Stunde
NASA_API_KEY=DEMO_KEY

# Optional: Andere NASA Services
NASA_MARS_API_KEY=DEMO_KEY
NASA_NEO_API_KEY=DEMO_KEY

# Hamburg Location (für ISS Passes & Stargazing)
HAMBURG_LAT=53.5511
HAMBURG_LON=9.9937
TIMEZONE=Europe/Berlin

# App Configuration
DEBUG=False
AUTO_REFRESH_INTERVAL=30
CACHE_TTL=300

# Optional: Database Configuration (für zukünftige Features)
# DATABASE_URL=sqlite:///cosmic_analytics.db

# Optional: Logging
LOG_LEVEL=INFO
LOG_FILE=cosmic_analytics.log

# Optional: External Services
# WEATHER_API_KEY=your_weather_api_key
# NOTIFICATION_SERVICE_KEY=your_notification_key

# ===========================================
# PRODUCTION DEPLOYMENT SETTINGS
# ===========================================

# Streamlit Cloud Secrets
# Diese Werte in .streamlit/secrets.toml kopieren:
# [api_keys]
# nasa = "your_nasa_api_key_here"
# 
# [location]
# hamburg_lat = 53.5511
# hamburg_lon = 9.9937